<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intuso.housemate.platform.android.service"
    android:versionCode="1"
    android:versionName="1.0.0-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission android:name="com.intuso.housemate.android.permission.ACCESS"
                android:label="@string/permission_name_access"
                android:description="@string/permission_description_access"
                android:permissionGroup="android.permission-group.NETWORK"
                android:protectionLevel="dangerous" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/application_name"
        android:theme="@style/AppTheme">
        <!-- Main activity to control general Housemate stuff -->
        <activity android:name=".activity.HousemateActivity"
                android:label="@string/activity_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SettingsActivity" />

        <!-- Internal service that connects to the server -->
        <service android:name=".service.ConnectionService"
                 android:exported="false"
                 android:label="@string/service_name_connection">
        </service>

        <!-- Receiver for when a network is (not) available -->
        <receiver android:name=".service.NetworkStateReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- Service that third party apps can bind to -->
        <service android:name=".service.AppService"
                 android:permission="com.intuso.housemate.android.permission.ACCESS"
                 android:exported="true"
                 android:label="@string/service_name_router">
            <intent-filter>
                <action android:name="com.intuso.housemate.service" />
            </intent-filter>
        </service>
    </application>

</manifest>