<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.intuso.housemate</groupId>
    <artifactId>housemate</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Housemate</name>
    <description>Parent for the Housemate framework</description>

    <properties>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>
        <junit.version>4.8.1</junit.version>
        <guava.version>13.0.1</guava.version>
        <guice.version>3.0</guice.version>
        <intuso.utils.version>1.0.0-SNAPSHOT</intuso.utils.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${project.build.sourceEncoding}</project.reporting.outputEncoding>
    </properties>

    <modules>
        <module>api</module>
        <module>object</module>
        <module>web</module>
        <module>broker</module>
        <module>comms</module>
	    <module>platform</module>
        <module>plugin</module>
    </modules>

    <dependencies>
        <!-- Test dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Attach sources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- Attach javadocs -->
            <!--<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>-->
        </plugins>
    </build>

    <scm>
        <connection>scm:svn:https://intuso.com/svn/housemate/trunk/</connection>
        <developerConnection>scm:svn:https://intuso.com/svn/housemate/trunk/</developerConnection>
    </scm>

    <distributionManagement>
        <repository>
            <id>central</id>
            <name>intuso.com-releases</name>
            <url>https://intuso.com/artifactory/libs-releases-local/</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <name>intuso.com-snapshots</name>
            <url>https://intuso.com/artifactory/libs-snapshot-local/</url>
        </snapshotRepository>
    </distributionManagement>
</project>
