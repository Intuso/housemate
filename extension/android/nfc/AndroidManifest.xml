<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.intuso.housemate.extension.android.nfc"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="14" />

    <uses-permission android:name="com.intuso.housemate.android.permission.ACCESS" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
            android:label="@string/app_name"
            android:icon="@drawable/icon">

        <activity android:name=".NfcActivity" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="housemate"
                      android:host="intuso.com"
                      android:pathPattern=".*"/>
            </intent-filter>
        </activity>

        <service android:name=".NFCService" />

    </application>

</manifest>
