<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'>
    <g:SimplePanel>
        <b:Modal ui:field="modal" title="Login" closable="false" fade="true" dataBackdrop="FALSE" dataKeyboard="true">
            <b:ModalBody>
                <b:Form>
                    <b:FieldSet>
                        <b:FormGroup>
                            <b:FormLabel for="username">Username</b:FormLabel>
                            <b:Input type="TEXT" b:id="username" ui:field="username" placeholder="Username"/>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel for="password">Password</b:FormLabel>
                            <b:Input type="PASSWORD" b:id="password" ui:field="password" placeholder="Password"/>
                        </b:FormGroup>
                    </b:FieldSet>
                </b:Form>
                <b:Alert ui:field="message" visible="false"/>
            </b:ModalBody>
            <b:ModalFooter>
                <b:Button ui:field="loginButton" type="PRIMARY">Login</b:Button>
            </b:ModalFooter>
        </b:Modal>
    </g:SimplePanel>
</ui:UiBinder>