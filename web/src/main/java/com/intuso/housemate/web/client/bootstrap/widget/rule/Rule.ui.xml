<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:h='urn:import:com.intuso.housemate.web.client.bootstrap.widget'>
    <g:FlowPanel>
        <b:Row>
            <b:Column size="8">
                <b:Heading size="3">General</b:Heading>
                <b:ButtonGroup>
                    <h:command.PerformButton ui:field="startButton">Start</h:command.PerformButton>
                    <h:command.PerformButton ui:field="stopButton">Stop</h:command.PerformButton>
                    <h:command.PerformButton ui:field="removeButton">Remove</h:command.PerformButton>
                </b:ButtonGroup>
                <b:Heading size="3">Conditions</b:Heading>
                <h:list.ObjectNavs ui:field="conditionList"/>
                <b:Heading size="3">Satisfied Consequences</b:Heading>
                <h:list.ObjectNavs ui:field="satisfiedConsequenceList"/>
                <b:Heading size="3">Unsatisfied Consequences</b:Heading>
                <h:list.ObjectNavs ui:field="unsatisfiedConsequenceList"/>
            </b:Column>
        </b:Row>
    </g:FlowPanel>
</ui:UiBinder>