<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:h='urn:import:com.intuso.housemate.web.client.bootstrap.widget'>
    <g:FlowPanel>
        <h:condition.ConditionList ui:field="conditions"/>
        <h:task.TaskList ui:field="satisfiedTasks"/>
        <h:task.TaskList ui:field="unsatisfiedTasks"/>
        <g:SimplePanel addStyleNames="clearfix">
            <b:Button ui:field="settings" addStyleNames="pull-right" size="MINI" icon="COG"/>
        </g:SimplePanel>
        <b:Collapse ui:field="settingsPanel" defaultOpen="false">
            <g:FlowPanel>
                <h:object.Control ui:field="control"/>
                <b:DropdownButton text="add" dropup="true">
                    <b:NavLink ui:field="addCondition">condition</b:NavLink>
                    <b:NavLink ui:field="addSatisfiedTask">satisfied task</b:NavLink>
                    <b:NavLink ui:field="addUnsatisfiedTask">unsatisfied task</b:NavLink>
                </b:DropdownButton>
            </g:FlowPanel>
        </b:Collapse>
    </g:FlowPanel>
</ui:UiBinder>