<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:h='urn:import:com.intuso.housemate.web.client.bootstrap.widget'>
    <g:FlowPanel>
        <g:FlowPanel ui:field="featureWidgets"/>
        <h:command.CommandList ui:field="commandsList"/>
        <h:value.ValueList ui:field="valuesList"/>
        <g:SimplePanel addStyleNames="clearfix">
            <b:Button ui:field="settingsButton" addStyleNames="pull-right btn-mini" icon="COG"/>
        </g:SimplePanel>
        <b:Collapse ui:field="settingsCollapse" defaultOpen="false">
            <g:SimplePanel ui:field="settingsPanel"/>
        </b:Collapse>
    </g:FlowPanel>
</ui:UiBinder>