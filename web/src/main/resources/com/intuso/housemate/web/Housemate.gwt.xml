<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 1.6.4//EN" "http://google-web-toolkit.googlecode.com/svn/tags/1.6.4/distro-source/core/src/gwt-module.dtd">
<module rename-to='Housemate'>

    <!-- Inherit the core Web Toolkit stuff -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.google.gwt.activity.Activity'/>
    <inherits name='com.google.gwt.place.Place'/>
    <inherits name='com.google.gwt.user.theme.chrome.Chrome'/>

    <!-- GWT bootstrap lib -->
    <inherits name='org.gwtbootstrap3.GwtBootstrap3'/>

    <!-- Gin -->
    <inherits name="com.google.gwt.inject.Inject"/>

    <!-- Guava -->
    <inherits name="com.google.common.base.Base" />
    <inherits name="com.google.common.collect.Collect" />

    <!-- Housemate client proxy api -->
    <inherits name='com.intuso.housemate.client.v1_0.proxy.api.ClientV1_0ProxyAPI'/>

    <!-- Main source module -->
    <source path="client"/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='com.intuso.housemate.web.client.Housemate'/>

    <!-- Bootstrap customisation -->
    <public path="resources">
        <include name="css/*.css"/>
        <include name="js/*.js"/>
    </public>

    <stylesheet src="css/bootstrap.min.css"/>
</module>
