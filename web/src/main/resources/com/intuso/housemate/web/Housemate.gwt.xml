<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 1.6.4//EN" "http://google-web-toolkit.googlecode.com/svn/tags/1.6.4/distro-source/core/src/gwt-module.dtd">
<module rename-to='Housemate'>

    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.google.gwt.activity.Activity'/>
    <inherits name='com.google.gwt.place.Place'/>
    <inherits name='com.google.gwt.user.theme.chrome.Chrome'/>

    <!-- GWT bootstrap lib                                          -->
    <inherits name='com.github.gwtbootstrap.Bootstrap'/>
    <set-property name="bootstrap.responsiveDesign" value="true"/>

    <!-- Housemate lib                                              -->
    <inherits name='com.intuso.housemate.object.Proxy'/>

    <!-- Main source module -->
    <source path="client"/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='com.intuso.housemate.web.client.Housemate'/>

    <!-- specify the implementation of ClientFactory to use -->
    <replace-with class="com.intuso.housemate.web.client.bootstrap.BootstrapClientFactory">
        <when-type-is class="com.intuso.housemate.web.client.ClientFactory"/>
    </replace-with>

    <!-- Bootstrap customisation -->
    <source path='resources'/>
    <replace-with class="com.intuso.housemate.web.resources.BootstrapConfigurator">
        <when-type-is class="com.github.gwtbootstrap.client.ui.config.Configurator"/>
    </replace-with>
    <!--<replace-with class="com.intuso.housemate.web.resources.BootstrapMinConfigurator">
        <when-type-is class="com.github.gwtbootstrap.client.ui.config.Configurator"/>
    </replace-with>-->
    <public path="resources">
        <exclude name="**/*.java"/>
        <exclude name="**/*.class"/>
    </public>
</module>
