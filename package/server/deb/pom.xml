<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.intuso.housemate</groupId>
        <artifactId>housemate-package-server</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>housemate-package-server-deb</artifactId>
    <packaging>jar</packaging>
    <name>Housemate Package Server Deb</name>
    <description>Housemate Server Debian Package</description>

    <dependencies>

        <!-- Jar module -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>housemate-package-server-jar</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <artifactId>jdeb</artifactId>
                <groupId>org.vafer</groupId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <id>package-deb</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jdeb</goal>
                        </goals>
                        <configuration>
                            <deb>${project.build.directory}/housemate-${project.version}.deb</deb>
                            <changesOut>${project.build.directory}/housemate-${project.version}.changes</changesOut>
                            <dataSet>
                                <data>
                                    <src>${project.basedir}/../jar/target/housemate-package-server-jar-${project.version}-jar-with-dependencies.jar</src>
                                    <type>file</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/usr/share/intuso/housemate</prefix>
                                        <user>hm</user>
                                        <group>nogroup</group>
                                        <filemode>744</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${project.build.directory}/classes/conf</src>
                                    <type>directory</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/etc/intuso/housemate</prefix>
                                        <user>hm</user>
                                        <group>nogroup</group>
                                        <filemode>744</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <type>template</type>
                                    <paths>
                                        <path>/var/log/intuso</path>
                                    </paths>
                                    <mapper>
                                        <type>perm</type>
                                        <user>hm</user>
                                        <group>nogroup</group>
                                        <filemode>755</filemode>
                                    </mapper>
                                </data>
                                <data>
                                    <src>${project.build.directory}/classes/systemctl/housemate.service</src>
                                    <type>file</type>
                                    <mapper>
                                        <type>perm</type>
                                        <prefix>/lib/systemd/system</prefix>
                                        <user>root</user>
                                        <group>root</group>
                                    </mapper>
                                </data>
                            </dataSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>